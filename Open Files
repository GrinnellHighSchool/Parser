# Sergio - Open()

import subprocess

class Parser():

    def __init__(self, file):
        self.file = file
        
     def Open(self):
        directory = ['\ ' if x == ' ' else x for x in self.file]
        file = ''.join(directory[0:len(directory)])
        subprocess.run('open ' + file, shell=True)



# Aidan - Open()

import subprocess

class opener():

    def __init__(self):
        pass

    def opener_help(self):
        print ('This program opens a given file')

        
    def directory_opener(self, file):
        name = str(file)
        i = 0
        k=0
        spacekiller = list(name)
        for kill in range(len(spacekiller)):
            ehh = spacekiller[kill]
            if ehh == ' ':
                 i = kill
                 k += 1
            elif ehh != ' ':
                k = 0
                
            if k == 1:
                spacekiller.insert(i, '\\')
            



        for lol in spacekiller:            
            file = ''.join(spacekiller[0:len(spacekiller)])
        print (file)

        subprocess.run('open ' + file, shell=True)
