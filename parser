#put the name of any added classes in thie list as a string:
handler_lst = []

def parser():
    print('\n','Enter command below:')
    command = str(input())
    command_lst = command.split()
    try:
        keyword = command_lst[0]
    except:
        keyword = ''
    file_name = ''
    for word in command_lst[1:]:
        file_name += word + ' '
    file_name = file_name[:-1]
    
    for handler in handler_lst:
        if keyword in eval(handler).keywords():
            eval(handler).run(file_name)
            
    parser()
    
    #classes go here:
    
    
    
    #^^^^
    
parser()
